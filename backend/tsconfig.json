{
  "compilerOptions": {
    "target": "ES2020",
    "module": "node16",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "ignoreDeprecations": "6.0",
    "types": ["node"]
  },
  "include": ["src/**/*", "scripts/**/*", "prisma/seed.ts"]
}